<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping default-access="field" default-cascade="all">
    <class name="at.fhv.hotelmanagement.domain.model.Stay" table="stay" lazy="true">
        <cache usage="read-write"/>

        <id name="id" type="long" column="id" unsaved-value="-1">
            <generator class="native"/>
        </id>

        <component name="stayId" class="at.fhv.hotelmanagement.domain.model.StayId">
            <property name="id" column="stay_id" type="java.lang.String" />
        </component>

        <component name="bookingNo" class="at.fhv.hotelmanagement.domain.model.BookingNo">
            <property name="no" column="booking_no" type="java.lang.String" />
        </component>

        <property name="stayStatus">
            <type name="org.hibernate.type.EnumType">
                <param name="enumClass">at.fhv.hotelmanagement.domain.model.enums.StayStatus</param>
                <param name="useNamed">true</param>
            </type>
        </property>

        <property name="checkedInAt" column="checkedInAt" type="java.time.LocalDateTime" />

        <property name="checkedOutAt" column="checkedOutAt" not-null="false" type="java.time.LocalDateTime" />

    </class>
</hibernate-mapping>