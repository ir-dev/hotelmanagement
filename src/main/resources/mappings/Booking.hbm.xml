<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping default-access="field" default-cascade="all">
    <class name="at.fhv.hotelmanagement.domain.model.Booking" table="bookings" lazy="true">
        <id name="id" type="long" column="booking_id" unsaved-value="-1">
            <generator class="native"/>
        </id>

        <component name="bookingNo" class="at.fhv.hotelmanagement.domain.model.BookingNo">
            <property name="id" column="booking_domain_id" type="java.lang.String" />
        </component>

<!--        <component name="bookingStatus" class="at.fhv.hotelmanagement.domain.model.enums.BookingStatus">-->
<!--            <property name="" column="booking_domain_id" type="org.hibernate.type.EnumType" />-->
<!--        </component>-->

        <property name="arrivalDate" column="arrival_date" type="java.time.LocalDate" />

        <property name="departureDate" column="departure_date" type="java.time.LocalDate" />

        <property name="arrivalTime" column="arrival_time" type="java.time.LocalTime" />

        <property name="numberOfPersons" column="number_persons" type="java.lang.Integer" />

        <component name="paymentInformation" class="at.fhv.hotelmanagement.domain.model.PaymentInformation">
            <property name="cardHolderName" column="card_holder_name" type="java.lang.String" />
            <property name="cardNumber" column="card_number" type="java.lang.String" />
            <property name="cardValidThru" column="card_valid_thru" type="java.lang.String" />
            <property name="cardCvc" column="card_cvc" type="java.lang.String" />
        </component>
    </class>
</hibernate-mapping>