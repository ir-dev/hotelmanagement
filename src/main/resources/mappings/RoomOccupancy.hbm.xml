<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping default-access="field" default-cascade="all">
    <class name="at.fhv.hotelmanagement.domain.model.RoomOccupancy" table="roomOccupancy" lazy="true">
        <cache usage="read-write"/>

        <id name="id" type="long" column="id" unsaved-value="-1">
            <generator class="native"/>
        </id>

        <property name="startDate" column="start_date" type="java.time.LocalDate" />

        <property name="endDate" column="end_date" type="java.time.LocalDate" />
    </class>
</hibernate-mapping>