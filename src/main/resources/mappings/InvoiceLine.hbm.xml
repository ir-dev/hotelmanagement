<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping default-access="field" default-cascade="all">
    <class name="at.fhv.hotelmanagement.domain.model.InvoiceLine" table="invoiceLine" lazy="true">
        <cache usage="read-write"/>

        <id name="id" type="long" column="id" unsaved-value="-1">
            <generator class="native"/>
        </id>

        <property name="product" column="product" type="java.lang.String" />

        <property name="quantity" column="quantity" type="java.lang.Integer" />

        <property name="price" column="price" type="java.lang.Integer" />

    </class>
</hibernate-mapping>