<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping default-access="field" default-cascade="all">
    <class name="at.fhv.hotelmanagement.domain.model.Guest" table="guest" lazy="true">
        <cache usage="read-write"/>

        <id name="id" type="long" column="id" unsaved-value="-1">
            <generator class="native"/>
        </id>

        <component name="guestId" class="at.fhv.hotelmanagement.domain.model.GuestId">
            <property name="id" column="guest_id" type="java.lang.String" />
        </component>

        <property name="salutation">
            <type name="org.hibernate.type.EnumType">
                <param name="enumClass">at.fhv.hotelmanagement.domain.model.enums.Salutation</param>
                <param name="useNamed">true</param>
            </type>
        </property>

        <property name="firstName" column="first_name" type="java.lang.String" />

        <property name="lastName" column="last_name" type="java.lang.String" />

        <property name="birthday" column="birthday" type="java.time.LocalDate" />

        <component name="address" class="at.fhv.hotelmanagement.domain.model.Address">
            <property name="street" column="street" type="java.lang.String" />
            <property name="zipcode" column="zipcode" type="java.lang.String" />
            <property name="city" column="card_valid_thru" type="java.lang.String" />
            <property name="country">
                <type name="org.hibernate.type.EnumType">
                    <param name="enumClass">at.fhv.hotelmanagement.domain.model.enums.Country</param>
                    <param name="useNamed">true</param>
                </type>
            </property>
        </component>

        <property name="specialNotes" column="special_Notes" type="java.lang.String" />

    </class>
</hibernate-mapping>